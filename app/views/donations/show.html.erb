<div class="page-header">
  <%= link_to donations_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_donation_path(@donation), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show donation</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @donation.title %></dd>

  <dt>Donator:</dt>
  <dd><%= @donation.donator %></dd>

  <dt>Receiver:</dt>
  <dd><%= @donation.receiver %></dd>

  <dt>Description:</dt>
  <dd><%= @donation.description %></dd>

  <dt>Exchange time:</dt>
  <dd><%= @donation.exchange_time %></dd>

  <dt>Exchange address:</dt>
  <dd><%= @donation.exchange_address %></dd>

  <dt>Latitude:</dt>
  <dd><%= @donation.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @donation.longitude %></dd>

  <dt>Received:</dt>
  <dd><%= @donation.received %></dd>

  <dt>Valid donation:</dt>
  <dd><%= @donation.valid_donation %></dd>

</dl>
