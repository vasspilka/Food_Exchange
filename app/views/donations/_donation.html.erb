<div class="mediabox">
  <dl class="dl-horizontal">
  
    <dd><%= image_tag(donation.image.url(:medium)) %></dd>  
  
    <h3><%= donation.title %></h3>
  
    <dt>Donator:</dt>
    <dd><%= donation.donator.name %></dd>
  
    <dt>Description:</dt>
    <dd><%= donation.description %></dd>
  
    <dt>Exchange time:</dt>
    <dd><%= donation.exchange_time %></dd>
  
    <dt>Exchange address:</dt>
    <dd><%= donation.exchange_address %></dd>
  
    <%= link_to "Edit", edit_donation_path(donation), :class => 'btn btn-primary' %>

    <button id="open_claim_<%= "#{donation.id}" %>">I want this</button>
  </dl>
</div>

<script>
  $(function() {
    $( "#dialog_<%= "#{donation.id}" %>" ).dialog({
      autoOpen: false,
    });
    $( "#open_claim_<%= "#{donation.id}" %>" ).click(function() {
      $( "#dialog_<%= "#{donation.id}" %>" ).dialog( "open" );
    });
  });
</script>

<div id="dialog_<%= "#{donation.id}" %>" title="Basic dialog">
  <p><%= render '/donations/claim', :donation => donation%></p>
</div>