<%= simple_form_for(@donation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :donator %>
    <%= f.association :receiver %>
    <%= f.input :description %>
    <%= f.input :exchange_time %>
    <%= f.input :exchange_address %>
    <%= f.input :received %>
  </div>

  <div class="form-inputs">
    <%= f.fields_for :items do |builder| %>
      <%= render 'item_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add Item", f, :items %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
