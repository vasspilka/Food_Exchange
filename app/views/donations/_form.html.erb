<% if current_user %>
  <%= simple_nested_form_for(@donation || new_donation) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.hidden_field :donator_id, :value => "#{current_user.id}"%>
      <%# f.hidden_field :receiver_id %>
      <%= f.input :description %>
      <%= f.input :exchange_time %>
      <%= f.input :exchange_address %>
      <%= f.input :expiration_date %>
      <%= f.input :image %>
      <%# f.input :received %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
<% else %>
  <h1>Please sign in first</h1>
<% end %>
