<%= simple_form_for(@donation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :donator %>
    <%= f.association :receiver %>
    <%= f.input :exchange_time %>
    <%= f.input :exchange_address %>
    <%= f.input :received %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
