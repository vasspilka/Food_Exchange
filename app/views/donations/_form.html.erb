<% if current_user %>
  <%= simple_nested_form_for(@donation) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.hidden_field :donator_id, :value => "#{current_user.id}"%>
      <%# f.hidden_field :receiver_id %>
      <%= f.input :description %>
      <%= f.input :exchange_time %>
      <%= f.input :exchange_address %>
      <%# f.input :received %>
    </div>
  
    <div class="form-inputs">
      <%= f.fields_for :items do |item_form|%>
        <%= item_form.input :title %>
        <%= item_form.input :details %>
        <%= item_form.input :item_type, collection: ["Food","Clothing","Furniture","Electronics","Other"] %>
        <%= item_form.input :expiration_date %>
        <%= item_form.input :image %>
        <%= item_form.link_to_remove "Remove this item" %>
      <% end %>
      <br>
      <p><%= f.link_to_add "Add an item", :items %></p>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
<% else %>
  <h1>Please sign in first</h1>
<% end %>
