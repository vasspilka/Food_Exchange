<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Donation</th>
      <th>Title</th>
      <th>Photo</th>
      <th>Expiration date</th>
      <th>Details</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.donation %></td>
        <td><%= item.title %></td>
        <td><%= item.photo %></td>
        <td><%= item.expiration_date %></td>
        <td><%= item.details %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

